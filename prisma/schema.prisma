generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Admin {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}

model Food {
  id          Int         @id @default(autoincrement())
  name        String
  description String?
  price       Float
  createdAt   DateTime    @default(now())
  orderItems  OrderItem[] // <-- back-relation added
}

model Order {
  id        Int         @id @default(autoincrement())
  userId    Int
  status    String      @default("pending")
  createdAt DateTime    @default(now())
  items     OrderItem[]
}

model OrderItem {
  id       Int    @id @default(autoincrement())
  order    Order  @relation(fields: [orderId], references: [id])
  orderId  Int
  food     Food   @relation(fields: [foodId], references: [id])
  foodId   Int
  quantity Int
}
